<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <ListView x:Name="ListViewPeople" Margin="0,0,111,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="GPO name" Width="100" DisplayMemberBinding="{Binding Path=GpoName}"/>
                    <GridViewColumn Header="GPO Description" Width="150" DisplayMemberBinding="{Binding Path=GpoDescription}"/>
                    <GridViewColumn Header="GPO Value" Width="150" DisplayMemberBinding="{Binding Path=GpoValue}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Label" HorizontalAlignment="Left" Margin="-151,210,0,0" VerticalAlignment="Top"/>



    </Grid>
</Window>
